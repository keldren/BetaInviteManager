        <Button x:Name="btnFlagForRemoval" Content="Blacklist Selected" HorizontalAlignment="Left" Height="23" Margin="561,230,0,0" VerticalAlignment="Top" Width="110"/>
        <Button x:Name="btnImportResults" Content="Import Success CSV" HorizontalAlignment="Left" Height="23" Margin="561,258,0,0" VerticalAlignment="Top" Width="110"/>
        <Button x:Name="btnSendInviteRequestMail" Content="Send Invite Mail" HorizontalAlignment="Left" Height="23" Margin="561,286,0,0" VerticalAlignment="Top" Width="110"/>

    </Grid>
</Window>
